# Основные параметры
SQL_SCANNER_REQUEST_TIMEOUT_MS=10000
SQL_SCANNER_TIME_THRESHOLD_MS=3000
SQL_SCANNER_PARALLEL=4
SQL_SCANNER_MAX_REQUESTS=500

# Краулер
SQL_SCANNER_USE_JS=true
SQL_SCANNER_MAX_DEPTH=2
SQL_SCANNER_MAX_PAGES=50
SQL_SCANNER_SAME_ORIGIN_ONLY=true

# Техники (через запятую): error,boolean,time
#SQL_SCANNER_TECHNIQUES=error,boolean

# Заголовки и куки (вариант 1: CSV key=value; вариант 2: JSON)
#SQL_SCANNER_HEADERS=Authorization=Bearer token, X-Trace=abc
#SQL_SCANNER_HEADERS_JSON={"Authorization":"Bearer token","X-Trace":"abc"}
#SQL_SCANNER_COOKIES=session=token
#SQL_SCANNER_COOKIES_JSON={"session":"token"}

